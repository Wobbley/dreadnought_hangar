<h1>Abilities</h1>
<div class="entity-list">
  <%= for ability <- @abilities do %>
    <div class="entity">
      <a href="<%= ability_path(@conn, :html_ability_info, ability.name) %>">
        <%= tag(:img, src: ability.icon_uri, class: "entity-image")  %>
      </a>
      <div class="info">
        <a href="<%= ability_path(@conn, :html_ability_info, ability.name) %>">
          <div class="name"><%= ability.name %></div>
        </a>
        <div class="details"><%= ability.type %> | <%= ability.duration %> | <%= ability.cooldown %> </div>
      </div>
    </div>
  <% end %>
</div>