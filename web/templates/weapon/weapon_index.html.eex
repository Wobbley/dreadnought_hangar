<div class="row ship-index">
  <div class="small-12 large-12 columns">
    <h1>Weapons Hangar</h1>
    <p>Welcome captain, check out all the sick weapons</p>
  </div>
</div>
<div class="row ship-index">
  <%= for weapon <- @weapons do %>
  <div class="small-12 large-6 columns">
    <%= tag(:img, src: weapon.icon_uri)  %>
    <h4><%= weapon.name %></h4>
    
    <ul>
      <li>Type: <%= weapon.slot %></li>
      <li>Unlock: <%= weapon.unlock_level %> </li>
      <li>Cost: <%= weapon.cr %> CR | <%= weapon.sp %> SP</li>   
    </ul>
    <a class="secondary button" href="<%= weapon_path(@conn, :html_weapon_info, weapon.name) %>">Weapon Details</a>
  </div>
  <% end %>
</div>