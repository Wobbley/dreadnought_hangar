<div class="row ship-info">
  <div class="small-12 large-12 columns">
    <%= tag(:img, src: @perk.icon_uri)  %>
    <h2><%= @perk.name %></h2>
    <p>Sick text about the weapon</p>
    <table>
      <tr>
        <td>Type</td>
        <td><%= @perk.type %></td>
      </tr>
      <tr>
        <td>Unlock</td>
        <td>21</td>
      </tr>
      <tr>
        <td>Cost</td>
        <td>500 CR | 1000 SR</td>
      </tr>
    </table>
  </div>
</div>